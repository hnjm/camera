<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:background="@mipmap/back"
            />
        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="32dp"
            android:textSize="13sp"
            android:imeOptions="actionDone"
            android:maxLines="1"
            android:singleLine="true"
            android:hint="请输入文本，再点击图片任意位置，放置文本！"
            android:textColor="@android:color/white"
            android:textColorHint="#999999"
            android:textCursorDrawable="@null"
            android:background="@drawable/shape_edittext_white"
            />
    </LinearLayout>

    <com.chinamobile.gdwy.PaintableImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_pre"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="32dp"
            android:background="@mipmap/pre_step"
            />
        <Button
            android:id="@+id/btn_last"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="32dp"
            android:background="@mipmap/last_step"
            />
    </LinearLayout>
    <RadioGroup
        android:id="@+id/rg_colors"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="26dp"
            android:minWidth="24dp"
            android:checked="true"
            android:button="@drawable/selector_checkbox_white"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="26dp"
            android:minWidth="24dp"
            android:button="@drawable/selector_checkbox_red"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="26dp"
            android:minWidth="24dp"
            android:button="@drawable/selector_checkbox_yellow"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="26dp"
            android:minWidth="24dp"
            android:button="@drawable/selector_checkbox_green"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="26dp"
            android:minWidth="24dp"
            android:button="@drawable/selector_checkbox_blue"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_purple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="26dp"
            android:minWidth="24dp"
            android:button="@drawable/selector_checkbox_purple"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@mipmap/cancel"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </RadioGroup>
    <SeekBar
        android:id="@+id/seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:maxHeight="3dp"
        android:minHeight="3dp"
        android:progressDrawable="@drawable/seekbar_bg"
        android:progress="50"
        android:min="10"
        android:max="90"
        android:thumb="@drawable/selector_seekbar"/>
    <RadioGroup
        android:id="@+id/rg_types"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_line"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:checked="true"
            android:button="@drawable/selector_checkbox_line"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_ring"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:button="@drawable/selector_checkbox_ring"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/btn_text"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:button="@drawable/selector_checkbox_text" />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_arrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:button="@drawable/selector_checkbox_arrow"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_mosaic"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:button="@drawable/selector_checkbox_masaic"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="64dp"
            android:layout_height="32dp"
            android:background="@drawable/shape_checkbox_solid_colorprimary"
            android:text="完成"
            android:textColor="@android:color/white"
            />
        <Space
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
    </RadioGroup>
</LinearLayout>